<div class="row" style="margin-top:20px">
    <div class="row col-xs-12 col-md-2">
        <div class="font-buttons">
            <button id="font_up" type="button" class="btn btn-primary btn-block">
                Font up
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </button>
            <button id="font_down" type="button" class="btn btn-primary btn-block">
                Font down
                <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
            </button>
        </div>
        <div>
            <button id="hide_file" type="button" class="btn btn-default btn-block">
                Hide file
                <span class="glyphicon glyphicon-chevron-up" aria-hidden="true"></span>
            </button>
            <button id="show_file" type="button" class="btn btn-default btn-block">
                Show file
                <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span>
            </button>
        </div>
        <div>
            <button id="to_html" type="button" class="btn btn-warning btn-block">
                Html it!
                <span class="glyphicon glyphicon-font" aria-hidden="true"></span>
            </button>
        </div>
    </div>
    <div id="result_child" class="col-xs-10" style="margin-left: 20px;">
        <h1 id="header">Edit your text!</h1>
        <div id="text_result"></div>
        <div id="html_text"></div>
    </div>
</div>

