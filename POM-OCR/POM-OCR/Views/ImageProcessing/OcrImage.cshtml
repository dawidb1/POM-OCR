@model List<IronOcr.OcrResult>
@{
    ViewBag.Title = "OcrImage";
}
<script type="text/javascript">
    function changeFont() {
        var size = document.getElementByClassName('pstyle').style.fontSize;
        var number = size.substring(0, 2);
        var numberInt = parseInt(number);
        numberInt += 2;
        document.getElementByClassName('pstyle').style.fontSize = numberInt + 'px';
    }
</script>

<h2>OcrImage</h2>
<div id="fonter">
    @foreach (var item in Model)
    {
        <p class="pstyle" style="font-size:12px">@item</p>
    }

</div>
<div>
    <button type="button" style="margin:20px; font-size:x-large" onclick="changeFont();">Make bigger</button>
    <br/>
</div>
<div>
    <img src="@Url.Content(ViewBag.Path)" alt="Image" height="500" />
</div>



