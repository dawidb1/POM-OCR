@model string

<div id="result-div">
    @*results are loaded here*@

</div>
<div class="load-image">
    @*it is collapsed after OCR*@
    <h2>Free your text</h2>
    <h3>Choose images/text which you don't want to read.</h3>

    <div class="row">
        <div id="image_div" class="image_div col-md-8 col-md-offset-2">
            <img id="image" src="@Url.Content(Model)" alt="Image" />
        </div>

        <div class="col-md-8 col-md-offset-2">
            <div class="col-md-6">
                <div id="submitOrDeny">
                    <div class="col-md-6">
                        <button id="submit" type="button" class="btn btn-success btn-block">
                            Ok
                            <span class="glyphicon glyphicon-ok"></span>
                        </button>
                    </div>
                    <div class="col-md-6">
                        <button id="deny" type="button" class="btn btn-danger btn-block">
                            Not ok
                            <span class="glyphicon glyphicon-remove"></span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <button id="refresh" type="reset" class="btn btn-default btn-block">
                    Refresh
                    <span class="glyphicon glyphicon-refresh"></span>
                </button>
            </div>
            <div class="col-md-3">
                <button id="makeOcr" type="button" class="btn btn-primary btn-block">
                    Go!
                    <span class="glyphicon glyphicon-log-in"></span>
                </button>
            </div>
        </div>
    </div>
</div>
<div class="modal"><!-- Place at bottom of page --></div>

<script src="~/Scripts/jquery-3.3.1.js"></script>
