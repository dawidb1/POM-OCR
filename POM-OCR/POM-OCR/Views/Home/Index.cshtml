@model POM_OCR.Models.Image
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Make your text mobile!</h1>
    <p class="lead">OCR helps you to make fast clean and readable text in html or ePub* from your scans and pdfs.</p>
    <p>Let's load files</p>
</div>

@using (Html.BeginForm("Add", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)


        <div class="form-group">
            @Html.LabelFor(model => model.ImagePath, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="ImageFile" required>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Load" class="btn btn-default" />
            </div>
        </div>
    </div>
}