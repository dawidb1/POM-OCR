@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Make your text mobile!</h1>
    <p class="lead">OCR helps you to make fast clean and readable text in html from your scans and pdfs.</p>
    <p>Let's load files</p>
</div>

@using (Html.BeginForm("Add", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)


        <div class="form-group">
            <label for="file">Upload Image:</label>
            <div class="col-md-10">
                <input type="file" name="file" id="file" style="width: 100%;" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Upload" class="submit btn btn-default" />
            </div>
        </div>
    </div>
}